{
    "name": "osddqd/http-client-generator-for-laravel",
    "description": "Enhanced HTTP Client Generator for Laravel with custom namespace and path support",
    "license": "MIT",
    "authors": [
        {
            "name": "OSDDQD",
            "email": "osddqd@users.noreply.github.com"
        },
        {
            "name": "Janez Cergolj",
            "email": "me@jcergolj.me.uk"
        }
    ],
    "keywords": [
        "laravel",
        "http-client",
        "generator",
        "artisan",
        "command"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "laravel/prompts": "^0.3.1"
    },
    "require-dev": {
        "laravel/pint": "^1.9",
        "tightenco/tlint": "^9.1",
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^9.14"
    },
    "autoload": {
        "psr-4": {
            "Osddqd\\HttpClientGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Osddqd\\HttpClientGenerator\\Tests\\": "tests/",
            "App\\": "tests/workbench/app/",
            "Tests\\": "tests/workbench/tests/",
            "Database\\Factories\\": "tests/workbench/database/factories/",
            "Database\\Seeders\\": "tests/workbench/database/seeders/"
        }
    },
    "scripts": {
        "pint": "vendor/bin/pint",
        "tlint": "tlint",
        "analyse": [
            "@pint",
            "@tlint"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/phpunit",
            "@clear"
        ],
        "test-coverage": [
            "@php vendor/bin/phpunit --coverage-html coverage"
        ],
        "test-unit": [
            "@php vendor/bin/phpunit --testsuite=Unit"
        ],
        "test-feature": [
            "@php vendor/bin/phpunit --testsuite=Feature"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@php -r \"file_exists('tests/workbench') || mkdir('tests/workbench', 0755, true);\""
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Osddqd\\HttpClientGenerator\\HttpClientGeneratorServiceProvider"
            ]
        }
    }
}